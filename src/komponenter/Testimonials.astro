---
const { overskrift, age, name, text } = Astro.props;
---

<article class="testimonial-container">
  <div class="border">
    <h2 class="overskrift">{overskrift}</h2>
    <p>{text}</p>
    <h3>{name}, {age}</h3>
  </div>
</article>

<style>
  .testimonial-container {
    text-align: center;
    padding-bottom: 10%;
  }

  .border {
    border: #e5604d solid 1px;
    margin-inline: 5%;
    padding-bottom: 10%;
  }

  @media (max-width: 600px) {
  }

  @media (max-width: 600px) {
  }

  .overskrift {
    font-size: 18px;
    font-weight: bold;
    color: #e5604d;
    padding-top: 40px;
    font-family: "Montserrat", sans-serif;
  }

  h3 {
    font-size: 13px;
    font-weight: normal;
    color: rgba(0, 0, 0, 0.5);
    font-family: "Montserrat", sans-serif;
  }

  p {
    font-size: 13px;
    font-family: "Montserrat", sans-serif;
  }

  @media (max-width: 600px) {
    .testimonial {
      margin-left: 7%;
    }

    h2 {
      padding-top: 15px;
      font-size: 15px;
    }

    h3 {
      font-size: 13px;
    }

    p {
      padding-bottom: 10px;
    }
  }
</style>
