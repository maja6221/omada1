---
const { overskrift, age, name, text } = Astro.props;
---

<li class="testimonial">
  <h2>{overskrift}</h2>
  <h3>{name}</h3>
  <h3>{age}</h3>
  <p>{text}</p>
</li>

<style>
  .testimonial {
    margin-left: 6.8%;
    padding-top: 10px;
    font-family: "Montserrat", sans-serif;
  }

  h2 {
    font-size: 18px;
    font-weight: normal;
    padding-top: 24px;
  }

  h3 {
    font-size: 15px;
    font-weight: normal;
  }

  p {
    font-size: 13px;
  }

  @media (max-width: 600px) {
    .testimonial {
      margin-left: 7%;
    }

    h2 {
      padding-top: 15px;
      font-size: 15px;
    }

    h3 {
      font-size: 13px;
    }

    p {
      padding-bottom: 10px;
    }
  }
</style>
